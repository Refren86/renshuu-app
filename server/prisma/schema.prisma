generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FlashcardStatus {
  unset
  unrecognized
  familiar
  known
}

model Flashcard {
  id       String          @id @default(uuid())
  kanji    String?
  reading  String
  meaning  String
  status   FlashcardStatus @default(unset)
}